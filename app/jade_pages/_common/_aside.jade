aside.sidebar
	.categories__box
		ul.categories__list
			- var items =["Флагманы", "Бюджетная линейка"]
			each item in items
				li(class="categories__item" + ((item == "Бюджетная линейка") ? " " + "active" : ""))
					a(href="#" class="categories__link")= item
	.filter__box
		ul.filter__list
			li.filter__item
				.filter__title
					a(href="#" class="filter__title-link") Наличие в магазине
				.filter__content
					ul.filter__choose
						- var items = ["Во всех магазинах", "В ближайшем ко мне магазине"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="radio" class="filter__choose-input")
									.filter__choose-elem
									.filter__choose-text= item
			li.filter__item
				.filter__title
					a(href="#" class="filter__title-link") Бренды
				.filter__content
					ul.filter__choose.filter__choose_checkboxes
						- var items = ["Lenovo", "Apple", "Samsung", "Asus", "Motorola"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="checkbox" class="filter__choose-input")
									.filter__choose-elem
									.filter__choose-text= item
					.filter__reset--wrap
						a(href="#" class="filter__reset") Сбросить фильтр
			li.filter__item
				.filter__title
					a(href="#" class="filter__title-link") Цена
				.filter__content
					.filter__slider
						.filter__slider-displays
							.filter__slider-left
								.filter__slider-text от
								input(name="" type="text" placeholder="" class="filter__slider-input" id="price")
							.filter__slider-right
								.filter__slider-text до
								input(name="" type="text" placeholder="" class="filter__slider-input" id="price2")
						div(class="filter__slider-element" data-min="0" data-max="30000")
			li.filter__item
				.filter__title
					a(href="#" class="filter__title-link") Цвет
				.filter__content
					ul.filter__colors
						- for (var o = 1; o < 13; o++)
							li.filter__colors-item
								a(href="" class="filter__colors-link color__" + o)
			li.filter__item
				.filter__title
					a(href="#" class="filter__title-link") Операционная система
				.filter__content
					ul.filter__choose.filter__choose_checkboxes
						- var items = ["Android", "iOS", "Symbian", "Windows Mobile", "Custom"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="checkbox" class="filter__choose-input")
									.filter__choose-elem
									.filter__choose-text= item
					.filter__reset--wrap
						a(href="#" class="filter__reset") Сбросить фильтр